{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "bin/",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "meow": ["./node_modules/meow"],
      "chalk": ["./node_modules/chalk"],
      "*.ts": ["*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  }
}
